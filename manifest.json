{
  "manifest_version": 3,
  "name": "CoinOp",
  "version": "0.0.1",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://mutinynet.arkade.sh/*",
    "https://asp.arklabs.to/*",
    "https://blockstream.info/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/background/index.ts"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}

